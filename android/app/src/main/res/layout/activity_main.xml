<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/checkUsersButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/check_users"
                android:textSize="25sp"
                android:onClick="goToUsers"
                />

            <Button
                android:id="@+id/addnewuserbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkUsersButton"
                android:layout_centerHorizontal="true"
                android:text="Add new user"
                android:textSize="25sp"
                android:onClick="goToAddUser"
                />
            <Button
                android:id="@+id/rmvusersbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addnewuserbutton"
                android:layout_centerHorizontal="true"
                android:text="Remove Users"
                android:textSize="25sp"
                android:onClick="goToRemoveUser"
                />

            <Button
                android:id="@+id/checkAlertsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/check_alerts"
                android:layout_below="@id/rmvusersbutton"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:onClick="goToAlerts"
                />
            <Button
                android:id="@+id/checkHistoryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkAlertsButton"
                android:layout_centerHorizontal="true"
                android:text="@string/check_history"
                android:textSize="25sp"
                android:onClick="goToHistory"
                />

        </RelativeLayout>


</RelativeLayout>
